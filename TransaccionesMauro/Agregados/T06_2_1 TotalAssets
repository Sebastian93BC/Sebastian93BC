[
    {
        "$match": {
            "$expr": {
                "$eq": [
                    "$fechaProceso",
                    {
                        "$toDate": "2024-01-31"
                    }
                ]
            }
        }
    },
    {
        "$addFields": {
            "resultTotalAssets": {
                "$round": [
                    {
                        "$divide": [
                            {
                                "$multiply": [
                                    "$totalAssets",
                                    100
                                ]
                            },
                            "$globalTotalAssets"
                        ]
                    },
                    5
                ]
            }
        }
    },
    {
        "$lookup": {
            "from": "sidis_tasaconversion",
            "localField": "fechaProceso",
            "foreignField": "Fecha",
            "as": "result"
        }
    },
    {
        "$addFields": {
            "tasaDolar": {
                "$arrayElemAt": [
                    "$result.Tasa_DOL",
                    0
                ]
            },
            "tasaEuro": {
                "$arrayElemAt": [
                    "$result.Tasa_EUR",
                    0
                ]
            },
            "factorConversion": {
                "$arrayElemAt": [
                    "$result.Conversion",
                    0
                ]
            }
        }
    },
    {
        "$sort": {
            "resultTotalAssets": -1
        }
    },
    {
        "$project": {
            "_id": 0,
            "fechaProceso": 1,
            "name": 1,
            "resultTotalAssets": 1,
            "totalAssets": 1,
            "tasaDolar": 1,
            "tasaEuro": 1,
            "factorConversion": 1,
            "totalAssetsValue": 1,
            "globalTotalAssetsUSD": 1
        }
    },
    {
        "$group": {
            "_id": {
                "fechaProceso": "$fechaProceso"
            },
            "totalAssets": {
                "$push": {
                    "name": "$name",
                    "prctValue": "$resultTotalAssets",
                    "amountBsValue": "$totalAssets",
                    "amountUsdValue": {
                        "$divide": [
                            "$totalAssets",
                            "$tasaDolar"
                        ]
                    },
                    "globalValue": "$globalTotalAssetsUSD"
                }
            }
        }
    },
    {
        "$addFields": {
            "fechaProceso": "$_id.fechaProceso",
            "_id": "$$REMOVE"
        }
    },
    {
        "$merge": {
            "into": "Financialstatementdashboard",
            "on": "fechaProceso"
        }
    }
]