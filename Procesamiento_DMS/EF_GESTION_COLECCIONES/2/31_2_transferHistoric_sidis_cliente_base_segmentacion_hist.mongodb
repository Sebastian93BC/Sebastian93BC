[
  {
    "$match": {
      "$and": [
        {
          "$expr": {
            "$lte": [
              "$fechaProceso", {
                "$dateSubtract": {
                  "startDate": {
                    "$dateSubtract": {
                      "startDate": {
                        "$dateAdd": {
                          "startDate": {
                            "$dateTrunc": {
                              "date": {
                                "$toDate": "@processDate"
                              }, 
                              "unit": "month"
                            }
                          }, 
                          "unit": "month", 
                          "amount": 1
                        }
                      }, 
                      "unit": "month", 
                      "amount": {
                        "$toInt": "@timingInMonth"
                      }
                    }
                  }, 
                  "unit": "day", 
                  "amount": 1
                }
              }
            ]
          }
        }, {
          "$expr": {
            "$eq": [
              {
                "$substr": [
                  "$rifCedula", 8, -1
                ]
              }, {
                "$toString": "@parallelizationIndex"
              }
            ]
          }
        }
      ]
    }
  }, {
    "$project": {
      "_id": 0
    }
  }, {
    "$merge": {
      "into": "sidis_cliente_base_segmentacion_hist", 
      "on": [
        "fechaProceso", "rifCedula"
      ]
    }
  }
]