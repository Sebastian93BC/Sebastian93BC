        }
      }, 
      "weekBirthday": {
        "$week": {
          "$dateFromParts": {
            "year": {
              "$year": "$$NOW"
            }, 
            "month": {
              "$month": "$dateOfBirth"
            }, 
            "day": {
              "$dayOfMonth": "$dateOfBirth"
            }
          }
        }
      }, 
      "age": {
        "$subtract": [
          {
            "$subtract": [
              {
                "$year": "$$NOW"
              }, {
                "$year": "$dateOfBirth"
              }
            ]
          }, {
            "$cond": [
              {
                "$gt": [
                  {
                    "$dateFromParts": {
                      "day": {
                        "$dayOfMonth": "$dateOfBirth"
                      }, 
                      "month": {
                        "$month": "$dateOfBirth"
                      }, 
                      "year": {
                        "$year": "$$NOW"
                      }
                    }
                  }, {
                    "$dateTrunc": {
                      "date": "$$NOW", 
                      "unit": "day"
                    }
                  }
                ]
              }, 1, 0
            ]
          }
        ]
      }, 
