[
    {
      "$addFields": {
        "processDate": {
          "$subtract": [
            {
              "$dateFromParts": {
                "year": {
                  "$year": {
                    "$toDate": "@processDate"
                  }
                }, 
                "month": {
                  "$month": {
                    "$toDate": "@processDate"
                  }
                }
              }
            }, 86400000
          ]
        }
      }
    }, {
      "$addFields": {
        "fechaSuperior": {
          "$dateFromParts": {
            "year": {
              "$year": "$processDate"
            }, 
            "month": {
              "$month": "$processDate"
            }
          }
        }, 
        "month": {
          "$month": "$processDate"
        }
      }
    }, {
      "$addFields": {
        "fechaProcesoAct": {
          "$dateFromParts": {
            "year": {
              "$year": "$fechaProceso"
            }, 
            "month": {
              "$month": "$fechaProceso"
            }
          }
        }, 
        "fechaInferior": {
          "$dateSubtract": {
            "startDate": {
              "$dateFromParts": {
                "year": {
                  "$year": "$fechaSuperior"
                }, 
                "month": {
                  "$month": "$fechaSuperior"
                }
              }
            }, 
            "unit": "month", 
            "amount": {
              "$subtract": [
                "$month", 1
              ]
            }
          }
        }
      }
    }, {
      "$match": {
        "$and": [
          {
            "$expr": {
              "$gte": [
                "$fechaProcesoAct", "$fechaInferior"
              ]
            }
          }, {
            "$expr": {
              "$lte": [
                "$fechaProcesoAct", "$fechaSuperior"
              ]
            }
          }
        ]
      }
    }, {
      "$group": {
        "_id": null, 
        "globalIncomeFromLoanPortfolio7MUSD": {
          "$sum": "$globalIncomeFromLoanPortfolioUSD"
        }, 
        "fechaProceso": {
          "$max": "$fechaProceso"
        }, 
        "fechaProcesoInicio": {
          "$min": "$fechaProceso"
        }, 
        "name": {
          "$addToSet": "$name"
        }, 
        "banks": {
          "$addToSet": {
            "name": "$name", 
            "fechaProceso": "$fechaProceso", 
            "incomeFromLoanPortfolio": {
              "$sum": "$incomeFromLoanPortfolio"
            }
          }
        }
      }
    }, {
      "$unwind": {
        "path": "$banks"
      }
    }, {
      "$lookup": {
        "from": "sidis_tasaconversion", 
        "localField": "banks.fechaProceso", 
        "foreignField": "Fecha", 
        "as": "result"
      }
    }, {
      "$addFields": {
        "banks.incomeFromLoanPortfolioUSD": {
          "$round": [
            {
              "$divide": [
                "$banks.incomeFromLoanPortfolio", {
                  "$arrayElemAt": [
                    "$result.Tasa_DOL", 0
                  ]
                }
              ]
            }, 4
          ]
        }, 
        "result": "$$REMOVE"
      }
    }, {
      "$lookup": {
        "from": "sidis_Financialstatement", 
        "let": {
          "fechaProceso": "$banks.fechaProceso", 
          "name": "$banks.name"
        }, 
        "pipeline": [
          {
            "$match": {
              "$expr": {
                "$and": [
                  {
                    "$eq": [
                      "$fechaProceso", "$$fechaProceso"
                    ]
                  }, {
                    "$eq": [
                      "$name", "$$name"
                    ]
                  }
                ]
              }
            }
          }
        ], 
        "as": "result"
      }
    }, {
      "$addFields": {
        "banks.globalIncomeFromLoanPortfolioUSD": {
          "$arrayElemAt": [
            "$result.globalIncomeFromLoanPortfolioUSD", 0
          ]
        }, 
        "banks.gFechaProceso": "$fechaProceso", 
        "result": "$$REMOVE"
      }
    }, {
      "$group": {
        "_id": {
          "name": "$banks.name"
        }, 
        "incomeFromLoanPortfolio7M": {
          "$sum": "$banks.incomeFromLoanPortfolio"
        }, 
        "incomeFromLoanPortfolio7MUSD": {
          "$sum": "$banks.incomeFromLoanPortfolioUSD"
        }, 
        "globalIncomeFromLoanPortfolio7MUSD": {
          "$addToSet": {
            "value": "$banks.globalIncomeFromLoanPortfolioUSD"
          }
        }, 
        "fechaProceso": {
          "$first": "$banks.fechaProceso"
        }, 
        "gfechaProceso": {
          "$first": "$banks.gFechaProceso"
        }
      }
    }, {
      "$addFields": {
        "name": "$_id.name", 
        "_id": "$$REMOVE", 
        "globalIncomeFromLoanPortfolio7MUSD": {
          "$round": [
            {
              "$sum": "$globalIncomeFromLoanPortfolio7MUSD.value"
            }, 4
          ]
        }
      }
    }, {
      "$group": {
        "_id": {
          "name": "$name", 
          "fechaProceso": "$fechaProceso"
        }, 
        "incomeFromLoanPortfolio7M": {
          "$sum": "$incomeFromLoanPortfolio7M"
        }, 
        "incomeFromLoanPortfolio7MUSD": {
          "$sum": "$incomeFromLoanPortfolio7MUSD"
        }, 
        "globalIncomeFromLoanPortfolio7MUSD": {
          "$first": "$globalIncomeFromLoanPortfolio7MUSD"
        }, 
        "fechaProceso": {
          "$first": "$gfechaProceso"
        }
      }
    }, {
      "$addFields": {
        "resultIncomeFromLoanPortfolio7MUSD": {
          "$round": [
            {
              "$divide": [
                {
                  "$multiply": [
                    "$incomeFromLoanPortfolio7MUSD", 100
                  ]
                }, "$globalIncomeFromLoanPortfolio7MUSD"
              ]
            }, 5
          ]
        }
      }
    }, {
      "$sort": {
        "resultIncomeFromLoanPortfolio7MUSD": -1
      }
    }, {
      "$project": {
        "fechaProceso": "$fechaProceso", 
        "name": "$_id.name", 
        "resultIncomeFromLoanPortfolio7MUSD": 1, 
        "incomeFromLoanPortfolio7M": 1, 
        "incomeFromLoanPortfolio7MUSD": 1, 
        "globalIncomeFromLoanPortfolio7MUSD": 1, 
        "_id": 0
      }
    }, {
      "$group": {
        "_id": {
          "fechaProceso": "$fechaProceso"
        }, 
        "incomeFromLoanPortfolio_ac": {
          "$push": {
            "name": "$name", 
            "prctValue": "$resultIncomeFromLoanPortfolio7MUSD", 
            "amountBsValue": "$incomeFromLoanPortfolio7M", 
            "amountUsdValue": "$incomeFromLoanPortfolio7MUSD", 
            "globalValue": "$globalIncomeFromLoanPortfolio7MUSD"
          }
        }
      }
    }, {
      "$addFields": {
        "fechaProceso": "$_id.fechaProceso", 
        "_id": "$$REMOVE"
      }
    }, {
      "$merge": {
        "into": "Financialstatementdashboard", 
        "on": "fechaProceso"
      }
    }
  ]