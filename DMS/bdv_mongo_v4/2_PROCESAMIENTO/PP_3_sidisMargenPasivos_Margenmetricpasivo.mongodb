              then: {
                $round: [
                  {
                    $divide: [
                      "$promedioPasivo",
                      "$tasa_dolar",
                    ],
                  },
                  4,
                ],
              },
            },
            {
              case: {
                $eq: ["$denominacion", "EUROS"],
              },
              then: {
                $round: [
                  {
                    $multiply: [
                      "$promedioPasivo",
                      1,
                    ],
                  },
                  4,
                ],
              },
            },
          ],
          default: "$promedioPasivo",
        },
      },
      montoDebitoPasivo: {
        $switch: {
          branches: [
            {
              case: {
                $eq: [
                  "$denominacion",
                  "$moneda_base",
                ],
              },
              then: {
                $round: [
                  {
                    $divide: [
                      "$montoDebitoPasivo",
                      "$tasa_dolar",
                    ],
                  },
                  4,
                ],
              },
            },
            {
              case: {
                $eq: ["$denominacion", "EUROS"],
              },
              then: {
                $round: [
                  {
                    $multiply: [
                      "$montoDebitoPasivo",
                      1,
                    ],
                  },
                  4,
                ],
              },
            },
          ],
          default: "$montoDebitoPasivo",
        },
      },
      montoCreditoPasivo: {
        $switch: {
          branches: [
            {
              case: {
                $eq: [
                  "$denominacion",
                  "$moneda_base",
                ],
              },
              then: {
                $round: [
                  {
                    $divide: [
                      "$montoCreditoPasivo",
                      "$tasa_dolar",
                    ],
                  },
                  4,
                ],
              },
            },
            {
