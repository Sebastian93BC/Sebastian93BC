      montoDebitoPasivo: {
        $sum: "$mcl_monto_debitos",
      },
      numCreditoPasivo: {
        $sum: "$mcl_numero_creditos",
      },
      montoCreditoPasivo: {
        $sum: "$mcl_monto_creditos",
      },
    },
  },
  {
