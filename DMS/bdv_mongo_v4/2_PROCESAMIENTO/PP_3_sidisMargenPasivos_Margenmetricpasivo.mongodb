        "$mcl_segmento",
      "sidisMargen.codigoSubsegmento":
        "$mcl_subsegmento",
      "sidisMargen.codigoGrupoeconomico":
        "$mcl_grupo_economico",
      "sidisMargen.nombreNSE":
