      numeroContrato: {
        $sum: 1,
      },
      saldoPasivo: {
        $sum: "$mcl_saldo",
      },
      promedioPasivo: {
        $sum: "$mcl_promedio",
      },
      numDebitoPasivo: {
        $sum: "$mcl_numero_debitos",
